<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MauiToolkitApp.MainPage">

    <toolkit:DockLayout>
        <Button toolkit:DockLayout.DockPosition="Top" Text="Top" HeightRequest="50" BackgroundColor="DarkCyan" Clicked="Button_Clicked" />
        <Button toolkit:DockLayout.DockPosition="Bottom" Text="Bottom" HeightRequest="70" BackgroundColor="DodgerBlue" Clicked="Button_Clicked" />
        <Button toolkit:DockLayout.DockPosition="Left" Text="Left" WidthRequest="80" BackgroundColor="DarkMagenta" Clicked="Button_Clicked" />
        <Button toolkit:DockLayout.DockPosition="Right" x:Name="rightButton" Text="Right" WidthRequest="90" Clicked="Button_Clicked" />
        <toolkit:Expander>
            <toolkit:Expander.Header>
                <Label Text="First Section"
                       FontAttributes="Bold"
                       FontSize="Medium"
                       BackgroundColor="LightCoral"/>
            </toolkit:Expander.Header>
            <toolkit:Expander.Content>
                <HorizontalStackLayout Padding="10"
                                       BackgroundColor="Azure">
                    <Image Source="https://learn.microsoft.com/en-us/dotnet/maui/media/what-is-maui/maui-overview.png"
                           Aspect="AspectFill"
                           HeightRequest="120"
                           WidthRequest="120" />
                    <Label Text=".NET Multi-platform App UI (.NET MAUI) is a cross-platform framework for creating native mobile and desktop apps with C# and XAML."
                           FontAttributes="Italic" />
                </HorizontalStackLayout>
            </toolkit:Expander.Content>
        </toolkit:Expander>
        <toolkit:Expander>
            <toolkit:Expander.Header>
                <Label Text="Second Section"
                       FontAttributes="Bold"
                       FontSize="Medium"
                       BackgroundColor="LightGreen"/>
            </toolkit:Expander.Header>
            <toolkit:Expander.Content>
                <HorizontalStackLayout Padding="10"
                                       BackgroundColor="Azure">
                    <Image Source="https://learn.microsoft.com/en-us/dotnet/maui/media/what-is-maui/architecture-diagram.png"
                           Aspect="AspectFill"
                           HeightRequest="120"
                           WidthRequest="120" />
                    <Label Text=".NET MAUI provides a single framework for building the UIs for mobile and desktop apps. This diagram shows a high-level view of the architecture of a .NET MAUI app."
                           FontAttributes="Italic" />
                </HorizontalStackLayout>
            </toolkit:Expander.Content>
        </toolkit:Expander>
        <Button x:Name="centerButton" Text="Center" Clicked="centerButton_Clicked" BackgroundColor="DarkKhaki"/>
    </toolkit:DockLayout>

</ContentPage>
